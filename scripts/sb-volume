#	$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
#	* ) echo ðŸ”‡ && exit ;;
#esac
#echo "$icon$vol%"

#echo "$vol%"

#echo "$vol"%
echo ðŸ”Š"$vol"%
